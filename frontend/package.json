{
	"name": "dmarc-analyzer-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npx vite dev",
		"build": "npx vite build",
		"preview": "npx vite preview",
		"prepare": "npx svelte-kit sync || echo ''",
		"check": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:unit": "npx vitest",
		"test:e2e": "npx playwright test",
		"test:ci": "npx npm-run-all --parallel test:ci:unit test:ci:e2e",
		"test:ci:unit": "npx vitest run --reporter=junit --outputFile=frontend-unit-test-results.xml",
		"test:ci:e2e": "PLAYWRIGHT_JUNIT_OUTPUT_FILE=frontend-e2e-test-results.xml npx playwright test --reporter=junit",
		"install": "npm run prisma:generate",
		"prisma:generate": "cd .. && npx prisma generate",
		"prisma:migrate": "cd .. && npx prisma migrate dev",
		"prisma:studio": "cd .. && npx prisma studio",
		"docker:run": "docker run -it --rm -p 5173:5173 $(docker build -q -f ../frontend.Dockerfile ..)",
		"docker:test:unit": "docker run -t --rm $(docker build --target unit-test -q -f ../frontend.Dockerfile ..)",
		"docker:test:e2e": "docker run -t --rm --ipc=host --user pwuser --security-opt seccomp=seccomp_profile.json $(docker build --target e2e-test -q -f ../frontend.Dockerfile ..)",
		"docker:test": "npm run docker:test:unit && npm run docker:test:e2e"
	},
	"devDependencies": {
		"@auth/prisma-adapter": "^2.7.4",
		"@auth/sveltekit": "^1.7.4",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@node-rs/argon2": "^2.0.2",
		"@picocss/pico": "^2.0.6",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^22.13.1",
		"esbuild": "^0.25.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.1.0",
		"vitest": "^3.0.5",
		"zod": "^3.24.2"
	},
	"overrides": {
		"cookie": "^0.7.2",
		"@sveltejs/kit": "^2.17.2",
		"vite": "^6.1.0",
		"esbuild": "^0.25.0"
	}
}
